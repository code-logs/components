{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "strict": true,
    "module": "ESNext",
    "declaration": true,
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
